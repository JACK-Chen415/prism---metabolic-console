# Prism Metabolic Console - Backend Environment Configuration

# 应用配置
APP_NAME=Prism Metabolic Console
APP_VERSION=1.0.0
DEBUG=false

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 数据库配置 (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:your_password@localhost:5432/prism_db

# JWT 认证配置
JWT_SECRET_KEY=your-super-secret-key-change-in-production-at-least-32-characters
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# 豆包 AI 配置 (Volcengine ARK)
# 请在火山引擎控制台获取
ARK_API_KEY=your_ark_api_key
DOUBAO_ENDPOINT_ID=ep-xxxxxxxxxx
DOUBAO_VISION_ENDPOINT_ID=ep-yyyyyyyyyy

# 文件存储配置
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=10

# CORS 配置 (生产环境请修改为你的前端域名)
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]
